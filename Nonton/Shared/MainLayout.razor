@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar Elevation="1" Dense="@dense" Style="background: rgba(39,39,47,0.5); backdrop-filter: blur(20px)">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudSpacer />
        <MudInput InputType="InputType.Search" T="string" Clearable="true" Variant="Variant.Text" Placeholder="Search..."></MudInput>
    </MudAppBar>
    <MudDrawer @bind-Open="@open" ClipMode="clipMode" Breakpoint="@breakpoint" PreserveOpenState="@preserveOpenState" Elevation="1" Variant="@DrawerVariant.Mini" Style="background: rgba(39,39,47,0.5); backdrop-filter: blur(20px);">
        <MudNavMenu>
            <div class="d-flex flex-column justify-space-between" style="height: 100vh;">
                <div>
                    <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Filled.Movie" Href="/">Movies</MudNavLink>
                    <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Filled.Tv" Href="series">Series</MudNavLink>
                </div>
                <div>
                    <MudDivider DividerType="DividerType.FullWidth" Light="true"></MudDivider>
                    <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Filled.Extension" Href="addons">Addons</MudNavLink>
                </div>
            </div>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent Class="pt-16 px-1">
        <MudContainer Class="mt-6" MaxWidth="MaxWidth.ExtraExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code{
    bool open = false;
    bool dense = false;
    bool preserveOpenState = false;
    Breakpoint breakpoint = Breakpoint.Lg;
    DrawerClipMode clipMode = DrawerClipMode.Never;

    void ToggleDrawer()
    {
        open = !open;
        
    }
}