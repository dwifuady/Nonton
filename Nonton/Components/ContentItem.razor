@inject NavigationManager NavigationManager

<MudItem xs="6" sm="4" md="3" lg="1">
    <MudCard Elevation="4" Style="cursor: pointer" @onclick="() => ViewDetail(Meta.Id)">
        <MudCardMedia Image="@Meta.Poster" Height="210" Style="object-fit: cover"/>
    </MudCard>
</MudItem>

@code{

    [Parameter]
    public Meta Meta { get; set; } = null!;

    public async Task ViewDetail(string id)
    {
        await Task.Run(() => NavigationManager.NavigateTo($"detail/{id}"));
    }
}
