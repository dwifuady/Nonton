@page "/search"

@if (Addons is not null && Addons.Any())
{
    foreach (var addon in Addons)
    {
        var searchableCatalogs = addon.GetSearchableCatalogs()?.ToList();
        if (searchableCatalogs is not null && searchableCatalogs.Any())
        {
            foreach (var catalog in searchableCatalogs)
            {
                <ContentCards Addon="addon" Catalog="catalog" SearchMode="true" SearchQuery="@Keywords"></ContentCards>
            }
        }
    }
}
