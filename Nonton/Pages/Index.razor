@page "/"

<PageTitle>Discover - Movies</PageTitle>

@if (Discovers.Any())
{
    @foreach (var discover in Discovers)
    {
        @if (discover?.Metas is not null)
        {
            @*<ContentSlider CatalogName="@discover.CatalogName" Metas="discover.Metas"></ContentSlider>*@
            <ContentCards CatalogName="@discover.CatalogName" Metas="@discover.Metas"></ContentCards>
        }
    }
}