@page "/addons"

<PageTitle>Addons</PageTitle>

<div class="flex flex-col gap-4">
    <span class="text-lg">Addons</span>
    <div class="flex flex-row gap-2" role="group">
        <button class="rounded-full py-2 px-4 w-auto @(_isInstalledSelected ? "bg-teal-500 text-white dark:bg-slate-700 dark:text-teal-500" : "dark:text-white text-gray-800")" @onclick="LoadInstalledAddons">
            Installed
        </button>
        <button class="rounded-full py-2 px-4 w-auto @(_isCommunitySelected ? "bg-teal-500 text-white dark:bg-slate-700 dark:text-teal-500" : "dark:text-white text-gray-800")" @onclick="BrowseAddons">
            Community
        </button>
    </div>

    @if (_isInstalledSelected)
    {
        @if (AllInstalledAddons is not null)
        {
            <div class="flex flex-col gap-2 rounded-lg mb-12">
                @{

                    foreach (var addon in AllInstalledAddons)
                    {
                        <AddonCard Addon="addon" Installable="false" Removable="@(addon.IsDefaultAddon == false)" ShowDisableToggle="false" OnRemoved="() => DeleteAddon(addon.Manifest!.Id!)"></AddonCard>
                    }
                }
            </div>
        }
    }
    else if (_isCommunitySelected)
    {
        @if (FilteredAddonsCollection is not null)
        {
            <div class="flex flex-col gap-2 rounded-lg mb-12">
                <input type="text" @bind="SearchString" class="text-gray-900 p-2 rounded-lg" placeholder="Search addons..."/>
                @{

                    foreach (var addon in FilteredAddonsCollection)
                    {
                        <AddonCard Addon="addon" Installable="(AllInstalledAddons != null && !AllInstalledAddons.Any(a => a.Manifest!.Id!.Equals(addon.Manifest!.Id)) || AllInstalledAddons is null)"
                                   Removable="(AllInstalledAddons != null && AllInstalledAddons.Any(a => a.Manifest!.Id!.Equals(addon.Manifest!.Id)) || AllInstalledAddons is null)"
                                   ShowDisableToggle="false"
                                   OnInstalled="() => Install(addon)"
                                   OnRemoved="() => DeleteAddon(addon.Manifest!.Id!)"></AddonCard>
                    }
                }
            </div>
        }
    }
    
    @if (_showConfirmBox)
    {
        <div class="relative z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true">
            <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>

            <div class="fixed inset-0 z-10 overflow-y-auto">
                <div class="flex min-h-full items-end justify-center p-4 text-center items-center p-0">
                    
                    <div class="self-end relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">
                        <div class="bg-white dark:bg-slate-800 px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                            <div class="flex place-content-center">
                                <div class="text-center sm:mt-0 sm:ml-4 sm:text-left">
                                    <h3 class="text-lg mb-4 font-medium leading-6 text-gray-900 dark:text-white" id="modal-title">@_confirmBoxTitle</h3>
                                    <div class="flex flex-col gap-2 overflow-y-auto max-h-96 no-scrollbar">
                                        @_confirmBoxDescription
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="bg-gray-50 dark:bg-slate-800 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
                            <button type="button" class="mt-3 inline-flex w-full justify-center rounded-md border border-gray-300 bg-transparent px-4 py-2 text-base font-medium text-gray-700 dark:text-white shadow-sm hover:bg-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm" @onclick="() => _showConfirmBox = false">Cancel</button>
                            @if (_confirmBoxType == AddonConfirmBoxTypeEnum.Install)
                            {
                                <button type="button" class="mt-3 inline-flex w-full justify-center rounded-md border border-gray-300 bg-teal-500 px-4 py-2 text-base font-medium text-gray-700 dark:text-white shadow-sm hover:bg-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm" @onclick="() => Install(_confirmBoxAddonUrl)">Install</button>
                            }
                            else
                            {
                                <button type="button" class="mt-3 inline-flex w-full justify-center rounded-md border border-gray-300 bg-teal-500 px-4 py-2 text-base font-medium text-gray-700 dark:text-white shadow-sm hover:bg-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm" @onclick="() => Uninstall(_confirmBoxAddonId)">Uninstall</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>